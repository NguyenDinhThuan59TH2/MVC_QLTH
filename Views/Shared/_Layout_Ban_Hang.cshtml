@{
    ViewBag.Title = "Cửa Hàng Tạp Hóa";
    Layout = null;
    FreeTime1.Models.KhachHang khachHang = Session["khachHang"] as FreeTime1.Models.KhachHang;
}
<!DOCTYPE html>
<html>
<head>
    <title>Cửa Hàng Tạp Hóa</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" href="~/fonts/font-awesome/font-awesome-4.7.0/css/font-awesome.min.css">
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/font-awesome.css" rel="stylesheet">
    <link href="~/Content/popuo-box.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" type="text/css" href="~/Content/jquery-ui1.css">
    @RenderSection("styles", false)
</head>
<body>
    <div class="header-bot">
        <div class="header-bot_inner_wthreeinfo_header_mid">
            <div class="col-md-4 logo_agile">
                <h1>
                    <a href="index.html">
                        <span>P</span>húc
                        <span>T</span>hảo
                        <img src="~/Images/taphoapro logo.PNG" alt=" " style="width: 100px; height: 90px" />
                    </a>
                </h1>
            </div>
            <div class="col-md-8 header">
                <ul style="display: flex; justify-content: flex-end;">
                    @if (khachHang != null)
                    {
                        if (ViewBag.HistoryBackStore == null)
                        {
                            <li style="font-size: 15px; font-weight: bold; display: flex; justify-content: center; align-items: center;">
                                @Html.ActionLink("Lịch sử", "History", "DonHangDats", new { MaKH = khachHang.MaKH }, new { @style = "color: #ffac2f;" })
                            </li>
                        }
                        else
                        {
                            <li>
                                <button class="w3view-cart" onclick="location.href='@Url.Action("Index", "Home")'" style="background: none; position: relative;">
                                    <img src="~/Images/store.png" alt="Giỏ hàng" style="width: 100%;" />
                                </button>
                            </li>
                        }
                    }
                    <li>
                        @if (khachHang != null)
                        {
                            if (ViewBag.CartBackStore == null)
                            {
                                <button class="w3view-cart" onclick="location.href='@Url.Action("Orders", "DonHangDats")'" style="background: none; position: relative;">
                                    <img src="~/Images/shopping_cart.png" alt="Giỏ hàng" style="width: 100%;" />
                                    @if (ViewBag.SoLuongHangDat != null && ViewBag.SoLuongHangDat > 0)
                                    {
                                        <span class="badge badge-light" style="position: absolute; top: 0; right: -50%; background: #FF5722; color: white;">
                                            @ViewBag.SoLuongHangDat
                                        </span>
                                    }
                                </button>
                            }
                            else
                            {
                                <button class="w3view-cart" onclick="location.href='@Url.Action("Index", "Home")'" style="background: none; position: relative;">
                                    <img src="~/Images/store.png" alt="Giỏ hàng" style="width: 100%;" />
                                </button>
                            }
                        }
                    </li>
                    <li>
                        @if (khachHang == null)
                        {
                            <a href="#" data-toggle="modal" data-target="#myModal2">
                                @Html.ActionLink("Đăng nhập", "Index", "Login")
                            </a>
                        }
                        else
                        {
                            <p style="text-align: center;">@khachHang.HoTen</p>
                            <a href="#" data-toggle="modal" data-target="#myModal2">
                                @Html.ActionLink("Đăng xuất", "Logout", "Login")
                            </a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>


