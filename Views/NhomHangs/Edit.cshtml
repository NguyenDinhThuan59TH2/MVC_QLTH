@model FreeTime1.Models.NhomHang

@{
    ViewBag.Title = "Chỉnh sửa";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="~/Content/text.css">
    <link rel="stylesheet" type="text/css" href="~/Content/partition.css">
    <link rel="stylesheet" type="text/css" href="~/Content/form.css">
    <link rel="stylesheet" type="text/css" href="~/Content/image.css">
    <link rel="stylesheet" type="text/css" href="~/Content/noti.css" />
}

@section scripts {
    <script src="~/Scripts/noti.js"></script>
}
<div>
    <a href="@Url.Action("Index", new {})" class="btn btn-primary btn-sm">
        <i class="fa fa-arrow-left"></i>
        <span>
            Quay về
        </span>
    </a>
</div>

<h2 class="text-title">
    @Html.DisplayFor(model => model.MaNH)
</h2>

@using (Html.BeginForm("Edit", "NhomHangs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="partition partition-col">
        <div class="form partition-half-width" style="grid-template-columns: auto">
            <div class="form-group">
                <input name="MaNH" value="@Model.MaNH" class="hide form-input" />
                <div class="form-field">
                    <div class="form-label">
                        Tên nhóm hàng:
                    </div>
                    <div>
                        <input class="form-input" name="TenNH" value="@Model.TenNH" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-footer">
        <div>
            <input type="submit" value="Cập nhật" class="btn btn-success btn-sm" />
        </div>
    </div>
}
