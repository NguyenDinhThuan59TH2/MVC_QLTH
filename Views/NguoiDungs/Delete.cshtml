@model FreeTime1.Models.NguoiDung

@{
    ViewBag.Title = "Xóa người dùng";
    var gioiTinh = "Nữ";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="~/Content/text.css">
    <link rel="stylesheet" type="text/css" href="~/Content/image.css">
}

<h2 class="text-title">
    @Html.DisplayFor(model => model.HoTen)
    <img src="~/Images/NguoiDungs/@Model.Anh" class="avarta-middel" style="margin-left: 10px" />
</h2>

<h3>
    Bạn có chắc chắn muốn xóa người dùng này?
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div style="display: flex; margin-bottom: 10px; margin-left: 20px; margin-top: 10px;">
            <input type="submit" value="Xóa" class="btn btn-danger btn-sm" style="margin-right: 10px;" />
            <div class="form-actions no-color">
                <a href="@Url.Action("Index", new { })" class="btn btn-primary btn-sm">
                    <i class="fa fa-arrow-left"></i>
                    <span>
                        Quay về
                    </span>
                </a>
            </div>
        </div>
    }
</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TaiKhoan)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaiKhoan)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ChucVu)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ChucVu)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SDT)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DiaChi)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>
        <dd>
            @{ if (Model.GioiTinh)
                {
                    gioiTinh = "Nam";
                }
            }
            @gioiTinh
        </dd>
    </dl>
</div>
