@model IEnumerable<FreeTime1.Models.Hang>

@{
    ViewBag.Title = "Hàng";
}

<h2>Hàng</h2>
<p>
    <a href="@Url.Action("Create", new {})" class="btn btn-success btn-sm">
        <i class="fa fa-plus"></i>
        <span>
            Thêm hàng
        </span>
    </a>
</p>
<table class="table table-striped display dataTable">
    <thead>
        <tr id="list-header">
            <th>
                @Html.DisplayNameFor(model => model.HanSuDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaBan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MauHang.TenMH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhaCungCap.TenNCC)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HanSuDung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayNhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaNhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MauHang.TenMH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhaCungCap.TenNCC)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.MaH })" class="btn btn-primary btn-sm">
                        <i class="fa fa-pencil"></i>
                        <span>
                            Sửa
                        </span>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.MaH })" class="btn btn-danger btn-sm">
                        <i class="fa fa-plus"></i>
                        <span>
                            Xóa
                        </span>
                    </a>
                    <a href="@Url.Action("Details", new { id = item.MaH })" class="btn btn-info btn-sm">
                        <i class="fa fa-info"></i>
                        <span>
                            Xem thêm
                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
